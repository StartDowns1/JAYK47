---
import App from '../components/App.jsx';
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
  <meta name="theme-color" content="#000000">
  <meta name="apple-mobile-web-app-capable" content="yes">
  <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
  <title>JAYK47 - Official Artist Website</title>
  <meta name="description" content="Official website of JAYK47 - Stream music, get in touch, and stay updated.">
  
  <!-- Green Mind Font -->
  <style>
    @font-face {
      font-family: 'Green Mind';
      src: url('/fonts/GREEN MIND___.ttf') format('truetype');
      font-weight: normal;
      font-style: normal;
      font-display: swap;
    }

    @font-face {
      font-family: 'Green Mind';
      src: local('Impact'), local('Arial Black');
      font-weight: normal;
      font-style: normal;
    }
  </style>
  
  <style is:global>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      -webkit-tap-highlight-color: transparent;
    }
    
    body {
      margin: 0;
      padding: 0;
      overflow: hidden;
      font-family: 'Green Mind', 'Impact', 'Arial Black', -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', sans-serif;
      -webkit-font-smoothing: antialiased;
      -moz-osx-font-smoothing: grayscale;
      background: #000;
      color: #fff;
      touch-action: pan-y;
      overscroll-behavior: none;
    }

    html {
      scroll-behavior: smooth;
      overflow: hidden;
    }

    /* Neon Cyberpunk Scrollbar */
    ::-webkit-scrollbar {
      width: 12px;
    }

    ::-webkit-scrollbar-track {
      background: #0a0a0a;
      border-left: 2px solid #00FFFF;
      box-shadow: inset 0 0 10px rgba(0, 255, 255, 0.3);
    }

    ::-webkit-scrollbar-thumb {
      background: linear-gradient(180deg, #00FFFF, #0080FF);
      border-radius: 0;
      transition: all 0.3s ease;
      box-shadow: 0 0 15px rgba(0, 255, 255, 0.8), inset 0 0 5px rgba(255, 255, 255, 0.3);
      border: 1px solid #00FFFF;
    }

    ::-webkit-scrollbar-thumb:hover {
      background: linear-gradient(180deg, #00FFFF, #00CCCC);
      box-shadow: 0 0 25px rgba(0, 255, 255, 1), inset 0 0 10px rgba(255, 255, 255, 0.5);
    }

    /* Neon Selection */
    ::selection {
      background: #00FFFF;
      color: #000;
      text-shadow: 0 0 10px rgba(0, 255, 255, 0.8);
    }

    ::-moz-selection {
      background: #00FFFF;
      color: #000;
      text-shadow: 0 0 10px rgba(0, 255, 255, 0.8);
    }

    button, a {
      -webkit-user-select: none;
      -moz-user-select: none;
      -ms-user-select: none;
      user-select: none;
      -webkit-touch-callout: none;
    }

    * {
      transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
    }

    @media (prefers-reduced-motion: no-preference) {
      * {
        scroll-behavior: smooth;
      }
    }

    @media (hover: none) and (pointer: coarse) {
      button, a {
        touch-action: manipulation;
      }
    }

    body {
      position: fixed;
      width: 100%;
      height: 100%;
    }

    /* Neon Glow Pulse Animation */
    @keyframes neonPulse {
      0%, 100% {
        filter: brightness(1) drop-shadow(0 0 20px currentColor) contrast(1.2);
        text-shadow: 0 0 25px currentColor, 0 0 50px currentColor;
      }
      50% {
        filter: brightness(1.4) drop-shadow(0 0 35px currentColor) contrast(1.5);
        text-shadow: 0 0 40px currentColor, 0 0 80px currentColor, 0 0 120px currentColor;
      }
    }

    /* Cyberpunk Gradient Animation */
    @keyframes cyberGradient {
      0% {
        background-position: 0% 50%;
        filter: hue-rotate(0deg) brightness(1);
      }
      50% {
        background-position: 100% 50%;
        filter: hue-rotate(10deg) brightness(1.2);
      }
      100% {
        background-position: 0% 50%;
        filter: hue-rotate(0deg) brightness(1);
      }
    }

    /* Glitch Effect */
    @keyframes glitchEffect {
      0%, 100% {
        transform: translate(0);
        filter: hue-rotate(0deg);
      }
      10% {
        transform: translate(-3px, 3px);
        filter: hue-rotate(90deg);
      }
      20% {
        transform: translate(-3px, -3px);
        filter: hue-rotate(180deg);
      }
      30% {
        transform: translate(3px, 3px);
        filter: hue-rotate(270deg);
      }
      40% {
        transform: translate(3px, -3px);
        filter: hue-rotate(360deg);
      }
    }

    /* Scan Line Effect */
    @keyframes scanLine {
      0% {
        top: -2%;
      }
      100% {
        top: 102%;
      }
    }

    /* Horizontal Scan */
    @keyframes scanLineHorizontal {
      0% {
        left: -2%;
      }
      100% {
        left: 102%;
      }
    }

    /* Neon Grid Flicker */
    @keyframes gridFlicker {
      0%, 100% {
        opacity: 0.15;
      }
      50% {
        opacity: 0.3;
      }
    }

    /* Scan line overlay - Vertical */
    body::before {
      content: '';
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 3px;
      background: linear-gradient(
        transparent, 
        rgba(0, 255, 255, 0.5), 
        rgba(0, 255, 255, 0.8),
        rgba(0, 255, 255, 0.5),
        transparent
      );
      animation: scanLine 8s linear infinite;
      pointer-events: none;
      z-index: 9999;
      box-shadow: 0 0 15px rgba(0, 255, 255, 0.8);
    }

    /* Scan line overlay - Horizontal */
    body::after {
      content: '';
      position: fixed;
      top: 0;
      left: 0;
      width: 3px;
      height: 100%;
      background: linear-gradient(
        transparent, 
        rgba(255, 16, 240, 0.4), 
        rgba(255, 16, 240, 0.6),
        rgba(255, 16, 240, 0.4),
        transparent
      );
      animation: scanLineHorizontal 6s linear infinite;
      pointer-events: none;
      z-index: 9999;
      box-shadow: 0 0 15px rgba(255, 16, 240, 0.6);
    }

    /* Grain texture with neon tint */
    #root::before {
      content: '';
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 400 400' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='2.5' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)'/%3E%3C/svg%3E");
      opacity: 0.05;
      pointer-events: none;
      z-index: 9998;
      mix-blend-mode: overlay;
    }

    /* Vignette with neon glow */
    #root::after {
      content: '';
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      box-shadow: 
        inset 0 0 200px rgba(0, 0, 0, 0.9),
        inset 0 0 100px rgba(0, 255, 255, 0.1);
      pointer-events: none;
      z-index: 1;
    }

    /* Mobile optimizations */
    @media (max-width: 768px) {
      html {
        font-size: 14px;
      }
      
      button, a {
        min-height: 44px;
        min-width: 44px;
      }
    }

    @media (max-width: 480px) {
      html {
        font-size: 12px;
      }
    }

    @media (max-height: 500px) and (orientation: landscape) {
      html {
        font-size: 10px;
      }
    }

    body {
      text-size-adjust: 100%;
      -webkit-text-size-adjust: 100%;
    }

    /* Backdrop blur support */
    @supports (backdrop-filter: blur(10px)) or (-webkit-backdrop-filter: blur(10px)) {
      .backdrop-blur {
        backdrop-filter: blur(10px) saturate(180%);
        -webkit-backdrop-filter: blur(10px) saturate(180%);
      }
    }

    /* Hardware acceleration */
    button, a, div {
      transform: translateZ(0);
      backface-visibility: hidden;
      perspective: 1000px;
    }

    button {
      touch-action: manipulation;
    }

    * {
      will-change: auto;
    }

    button:active, a:active {
      will-change: transform;
    }

    /* Neon Typography */
    h1, h2, h3, button, a {
      letter-spacing: 0.15em;
      font-weight: normal;
      text-transform: uppercase;
    }

    /* Cyberpunk color accents */
    .neon-accent-cyan {
      color: #00FFFF;
      text-shadow: 0 0 10px #00FFFF, 0 0 20px #00FFFF, 0 0 30px #00FFFF;
    }

    .neon-accent-pink {
      color: #FF10F0;
      text-shadow: 0 0 10px #FF10F0, 0 0 20px #FF10F0, 0 0 30px #FF10F0;
    }

    .neon-accent-green {
      color: #39FF14;
      text-shadow: 0 0 10px #39FF14, 0 0 20px #39FF14, 0 0 30px #39FF14;
    }

    /* Corner Accents */
    .corner-accent {
      position: fixed;
      pointer-events: none;
      z-index: 9997;
    }

    .corner-accent.top-left {
      top: 0;
      left: 0;
      width: 100px;
      height: 100px;
      border-top: 2px solid #00FFFF;
      border-left: 2px solid #00FFFF;
      box-shadow: 
        0 0 15px rgba(0, 255, 255, 0.6),
        inset 0 0 15px rgba(0, 255, 255, 0.3);
    }

    .corner-accent.top-right {
      top: 0;
      right: 0;
      width: 100px;
      height: 100px;
      border-top: 2px solid #FF10F0;
      border-right: 2px solid #FF10F0;
      box-shadow: 
        0 0 15px rgba(255, 16, 240, 0.6),
        inset 0 0 15px rgba(255, 16, 240, 0.3);
    }

    .corner-accent.bottom-left {
      bottom: 0;
      left: 0;
      width: 100px;
      height: 100px;
      border-bottom: 2px solid #39FF14;
      border-left: 2px solid #39FF14;
      box-shadow: 
        0 0 15px rgba(57, 255, 20, 0.6),
        inset 0 0 15px rgba(57, 255, 20, 0.3);
    }

    .corner-accent.bottom-right {
      bottom: 0;
      right: 0;
      width: 100px;
      height: 100px;
      border-bottom: 2px solid #FF6600;
      border-right: 2px solid #FF6600;
      box-shadow: 
        0 0 15px rgba(255, 102, 0, 0.6),
        inset 0 0 15px rgba(255, 102, 0, 0.3);
    }

    /* Smooth transitions for everything */
    * {
      transition: background 0.3s ease, 
                  border-color 0.3s ease, 
                  color 0.3s ease, 
                  box-shadow 0.3s ease,
                  transform 0.3s ease;
    }

    /* Loading animation */
    @keyframes fadeIn {
      from {
        opacity: 0;
      }
      to {
        opacity: 1;
      }
    }

    #root {
      animation: fadeIn 0.5s ease-in;
    }

    /* Enhance focus states for accessibility */
    button:focus-visible, a:focus-visible {
      outline: 2px solid #00FFFF;
      outline-offset: 4px;
      box-shadow: 0 0 20px rgba(0, 255, 255, 0.8);
    }

    /* Reduced motion for accessibility */
    @media (prefers-reduced-motion: reduce) {
      *,
      *::before,
      *::after {
        animation-duration: 0.01ms !important;
        animation-iteration-count: 1 !important;
        transition-duration: 0.01ms !important;
      }
      
      body::before,
      body::after {
        animation: none !important;
      }
    }
  </style>
</head>
<body>
  <!-- Corner Accents -->
  <div class="corner-accent top-left"></div>
  <div class="corner-accent top-right"></div>
  <div class="corner-accent bottom-left"></div>
  <div class="corner-accent bottom-right"></div>

  <div id="root">
    <App client:load />
  </div>
</body>
</html>
