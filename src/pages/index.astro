---
import App from '../components/App.jsx';
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
  <meta name="theme-color" content="#000000">
  <meta name="apple-mobile-web-app-capable" content="yes">
  <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
  <title>JAYK47</title>
  
  <!-- Green Mind Font -->
  <style>
    @font-face {
      font-family: 'Green Mind';
      src: url('/fonts/GREEN MIND___.ttf') format('truetype');
      font-weight: normal;
      font-style: normal;
      font-display: swap;
    }

    /* Fallback if font doesn't load */
    @font-face {
      font-family: 'Green Mind';
      src: local('Impact'), local('Arial Black');
      font-weight: normal;
      font-style: normal;
    }
  </style>
  
  <style is:global>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      -webkit-tap-highlight-color: transparent;
    }
    
    body {
      margin: 0;
      padding: 0;
      overflow: hidden;
      font-family: 'Green Mind', 'Impact', 'Arial Black', -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', sans-serif;
      -webkit-font-smoothing: antialiased;
      -moz-osx-font-smoothing: grayscale;
      background: #000;
      color: #fff;
      touch-action: pan-y;
      overscroll-behavior: none;
    }

    /* Smooth scrolling */
    html {
      scroll-behavior: smooth;
      overflow: hidden;
    }

    /* Custom scrollbar with cryptic style */
    ::-webkit-scrollbar {
      width: 10px;
    }

    ::-webkit-scrollbar-track {
      background: #000;
      border-left: 1px solid #DC0000;
    }

    ::-webkit-scrollbar-thumb {
      background: linear-gradient(180deg, #DC0000, #8B0000);
      border-radius: 0;
      transition: all 0.3s ease;
      box-shadow: 0 0 10px rgba(220, 0, 0, 0.8);
    }

    ::-webkit-scrollbar-thumb:hover {
      background: linear-gradient(180deg, #FF0000, #DC0000);
      box-shadow: 0 0 20px rgba(255, 0, 0, 1);
    }

    /* Selection color with distorted feel */
    ::selection {
      background: #DC0000;
      color: #fff;
      text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.8);
    }

    ::-moz-selection {
      background: #DC0000;
      color: #fff;
      text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.8);
    }

    /* Disable text selection on interactive elements */
    button, a {
      -webkit-user-select: none;
      -moz-user-select: none;
      -ms-user-select: none;
      user-select: none;
      -webkit-touch-callout: none;
    }

    /* Cryptic glitch transitions */
    * {
      transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
    }

    /* Smooth animations */
    @media (prefers-reduced-motion: no-preference) {
      * {
        scroll-behavior: smooth;
      }
    }

    /* Mobile touch optimizations */
    @media (hover: none) and (pointer: coarse) {
      button, a {
        touch-action: manipulation;
      }
    }

    /* Prevent iOS Safari bounce effect */
    body {
      position: fixed;
      width: 100%;
      height: 100%;
    }

    /* Enhanced cryptic neon glow effects */
    @keyframes crypticPulse {
      0%, 100% {
        filter: brightness(1) drop-shadow(0 0 15px currentColor) contrast(1.2);
        text-shadow: 0 0 20px currentColor, 0 0 40px currentColor;
      }
      50% {
        filter: brightness(1.3) drop-shadow(0 0 25px currentColor) contrast(1.4);
        text-shadow: 0 0 30px currentColor, 0 0 60px currentColor, 0 0 80px currentColor;
      }
    }

    /* Distorted gradient animations */
    @keyframes distortedGradient {
      0% {
        background-position: 0% 50%;
        filter: hue-rotate(0deg) brightness(1);
      }
      33% {
        background-position: 100% 50%;
        filter: hue-rotate(5deg) brightness(1.1);
      }
      66% {
        background-position: 50% 100%;
        filter: hue-rotate(-5deg) brightness(0.9);
      }
      100% {
        background-position: 0% 50%;
        filter: hue-rotate(0deg) brightness(1);
      }
    }

    /* Glitch effect for cryptic feel */
    @keyframes glitchEffect {
      0%, 100% {
        transform: translate(0);
      }
      20% {
        transform: translate(-2px, 2px);
      }
      40% {
        transform: translate(-2px, -2px);
      }
      60% {
        transform: translate(2px, 2px);
      }
      80% {
        transform: translate(2px, -2px);
      }
    }

    /* Cryptic scan line effect */
    @keyframes scanLine {
      0% {
        top: 0%;
      }
      100% {
        top: 100%;
      }
    }

    /* Add scan line overlay for cryptic effect */
    body::before {
      content: '';
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 2px;
      background: linear-gradient(transparent, rgba(220, 0, 0, 0.3), transparent);
      animation: scanLine 8s linear infinite;
      pointer-events: none;
      z-index: 9999;
    }

    /* Add grain texture overlay */
    body::after {
      content: '';
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 400 400' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='2' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)'/%3E%3C/svg%3E");
      opacity: 0.03;
      pointer-events: none;
      z-index: 9998;
    }

    /* Mobile font sizing */
    @media (max-width: 768px) {
      html {
        font-size: 14px;
      }
    }

    @media (max-width: 480px) {
      html {
        font-size: 12px;
      }
    }

    /* Improve touch targets for mobile */
    @media (max-width: 768px) {
      button, a {
        min-height: 44px;
        min-width: 44px;
      }
    }

    /* Landscape mobile optimization */
    @media (max-height: 500px) and (orientation: landscape) {
      html {
        font-size: 10px;
      }
    }

    /* Prevent text inflation on mobile */
    body {
      text-size-adjust: 100%;
      -webkit-text-size-adjust: 100%;
    }

    /* Smooth backdrop blur support */
    @supports (backdrop-filter: blur(10px)) or (-webkit-backdrop-filter: blur(10px)) {
      .backdrop-blur {
        backdrop-filter: blur(10px) saturate(180%);
        -webkit-backdrop-filter: blur(10px) saturate(180%);
      }
    }

    /* Hardware acceleration for smooth animations */
    button, a, div {
      transform: translateZ(0);
      backface-visibility: hidden;
      perspective: 1000px;
    }

    /* Remove double-tap zoom on buttons */
    button {
      touch-action: manipulation;
    }

    /* Improve performance on mobile */
    * {
      will-change: auto;
    }

    button:active, a:active {
      will-change: transform;
    }

    /* Cryptic letter spacing */
    h1, h2, h3, button, a {
      letter-spacing: 0.15em;
      font-weight: normal;
    }

    /* Add subtle vignette effect */
    #root {
      position: relative;
    }

    #root::before {
      content: '';
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      box-shadow: inset 0 0 200px rgba(0, 0, 0, 0.8);
      pointer-events: none;
      z-index: 1;
    }
  </style>
</head>
<body>
  <div id="root">
    <App client:load />
  </div>
</body>
</html>
